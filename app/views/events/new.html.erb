<h2> Create a new event </h2>



<%=form_for (@event) do |f|%>

  <% if @event.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @event.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class ="field">
  	<%=f.label :event_name%><br/>
  	<%=f.text_field :event_name%>
  </div>	
  
  

	<div class ="field">
 		<%=f.label :event_type%><br/>
  	<%#=f.text_field :event_type%>
  	<%= select :event, :event_type, %w(Seminar Lecture Conference), :include_blank => true%>
	</div>	

	<div class ="field">
  	<%=f.label :start_date%><br/>
  	<%=f.text_field :start_date%>
  </div>	

  <div class ="field">
  	<%=f.label :end_date%><br/>
  	<%=f.text_field :end_date%>
  </div>	

  <div class ="field">
  	<%=f.label :event_dscrip%><br/>
  	<%=f.text_area :event_dscrip%>
  </div>	


	<div class="actions">
		<%=f.submit%>
	</div>	
<%end%>	
	
	

	
