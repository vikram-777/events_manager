<h2> Lectures attended by <%=@user.email%> </h2>

<table>
	<tr>
		<th>Name</th>
		<th>Type</th>
		<th>Start date</th>
		<th>End date</th>
		<th>Description</th>
	</tr>
	
	<% @participations.each do |part|%>
	<% if part.user==@user%>
	<% if part.event.event_type=="Lecture"%>
	
	<tr>
			<td><%= part.event.event_name%></td>
			<td><%= part.event.event_type%></td>
			<td><%= part.event.start_date%></td>		
    	<td><%= part.event.end_date%></td>
    	<td><%= part.event.event_dscrip%></td>	
    	<td><%= link_to "Show Details", part.event%></td>
  </tr>  	
  <%end%>
  <%end%>
  <%end%>
</table> 
 
<p>
	<%= link_to "Index of all events", events_index_path%>
</p>

<a href="diff_seminars?id=<%=@user.id%>"> Seminars attended </a> <br />
<a href="diff_conferences?id=<%=@user.id%>"> Conferences attended </a>
